# my alias
alias l='ls -artl'
alias n='nvim'
alias shutdown='sudo shutdown -h now'
alias q='exit'
alias defx='nvr -c "MyDefx "$(pwd)'
alias ginalog='nvr -c "0tabnew | lcd "$(pwd)" | Gina log --branches --tags --remotes"'
alias branch='nvr -c "0tabnew | lcd "$(pwd)" | Gina branch --all"'

# bash setting
export PS1="\[\e[36m\]\w\[\e[m\] \\$ "

# my function
function ntab () {
    for f in "$@"
    do
        nvr -c 'MyTabNew '$(pwd)/"$f"
    done
}
function gclonecd () {
  git clone "$1" && cd "$(basename "$1" .git)"
}
function reload () {
  exec -l $SHELL
}
function gistrow () {
  curl -OLsS "$1"
}
function findportprosess () {
  lsof -i :"$1"
}
